{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "lib": ["esnext", "dom"],
        "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ]
}
