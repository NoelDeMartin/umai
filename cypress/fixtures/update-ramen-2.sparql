DELETE DATA {
    @prefix schema: <https://schema.org/> .
    @prefix crdt: <https://vocab.noeldemartin.com/crdt/> .
    @prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

	<#it>
        schema:name "Ramen!" ;
        schema:description "is life" ;
        schema:recipeIngredient "Toppings" .

    <#it-metadata> crdt:updatedAt "[[previous-date][.*]]"^^xsd:dateTime .

    <#[[instruction-step-2][%uuid%]]> schema:text "Dip them into the broth" .

    <#[[instruction-step-2][%uuid%]]-metadata> crdt:updatedAt "[[previous-date][.*]]"^^xsd:dateTime .

